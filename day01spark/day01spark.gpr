with "config/day01spark_config.gpr";
project Day01spark is

   for Source_Dirs use ("src/", "config/");
   for Object_Dir use "obj/" & Day01spark_Config.Build_Profile;
   for Create_Missing_Dirs use "True";
   for Exec_Dir use "bin";
   for Main use ("day01spark.adb");

   package Compiler is
      for Default_Switches ("Ada") use Day01spark_Config.Ada_Compiler_Switches;
   end Compiler;

   package Binder is
      for Switches ("Ada") use ("-Es"); --  Symbolic traceback
   end Binder;

   package Install is
      for Artifacts (".") use ("share");
   end Install;

end Day01spark;
